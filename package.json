{
  "name": "eslint-config-ackama",
  "version": "1.1.0",
  "description": "Standard ESLint configurations for Ackama projects.",
  "homepage": "https://github.com/ackama/eslint-config-ackama#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ackama/eslint-config-ackama.git"
  },
  "license": "ISC",
  "author": "Gareth Jones",
  "files": [
    "index.js"
  ],
  "scripts": {
    "lint": "eslint . --ignore-pattern '!.eslintrc.js' --ext js,ts",
    "release": "semantic-release -r git+ssh://git@github.com/squareweave/eslint-config-ackama.git",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": "prettier-config-ackama",
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx",
      "node"
    ],
    "resetMocks": true,
    "restoreMocks": true,
    "testEnvironment": "node",
    "testRunner": "jest-circus/runner",
    "transform": {
      "\\.tsx?": "ts-jest"
    }
  },
  "dependencies": {
    "eslint-config-prettier": "^6.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@semantic-release/changelog": "^3.0.6",
    "@semantic-release/git": "^7.0.18",
    "@types/eslint": "^6.1.3",
    "@types/jest": "^24.9.0",
    "@types/node": "^12.12.25",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/experimental-utils": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "eslint": "^6.8.0",
    "eslint-plugin-eslint-comments": "^3.1.2",
    "eslint-plugin-local": "^1.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-circus": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-config-ackama": "^0.1.2",
    "semantic-release": "^15.14.0",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "eslint": ">= 6",
    "eslint-plugin-eslint-comments": ">= 3",
    "eslint-plugin-prettier": ">= 3.1",
    "prettier": ">= 1.19"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
