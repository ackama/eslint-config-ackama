{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["after 1am and before 2am on monday"]
  },
  "rangeStrategy": "replace",
  "postUpdateOptions": ["npmDedupe"],
  "packageRules": [
    {
      "matchFileNames": [".github/**"],
      "groupName": "workflows"
    }
  ]
}
